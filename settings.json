{
    "eslint.autoFixOnSave": true,
    /*
    Files
    */
    "files.autoSave": "off",

    /*
    Workbench
    */
    // Reference: https://github.com/Microsoft/vscode/issues/7643#issuecomment-226435155
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // Insert spaces when pressing Tab. This setting is overriden based on the
    // file contents when `editor.detectIndentation` is on.
    "editor.insertSpaces": true,

    /*
    VIM
    */
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.smartcase": true,
    "vim.ignorecase": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "t"],
            "after": [],
            "commands": [
                {
                    "command": ":tabn"
                }
            ]
        },
        {
            "before": ["<leader>", "f"],
            "after": ["<C-f>"]
        },
        {
            "before": ["<leader>", "w"],
            "after": ["<C-w>", "w"]
        },
        {
            "before": ["<leader>", "e"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.view.explorer",
                    "args": []
                }
            ]
        },
        {
            "before": [":", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "r"],
            "after": ["<C-b>"]
        }
    ],
    "window.zoomLevel": 0,
    "editor.minimap.enabled": false,
    "editor.fontSize": 14
}
